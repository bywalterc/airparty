<div class="container">
  <h2>
    <%= @space.name %>
  </h2>
  <%= @space.description %>
  <%= @space.category %>
  <%= @space.price %>
  <p class="trash_link">
      <%= link_to space_path(@space), method: :delete do %>
          <i class="far fa-trash-alt"></i>
      <% end %>
  </p>
  <p class="trash_link">
      <%= link_to edit_space_path(@space) do %>
          <i class="far fa-edit"></i>
      <% end %>
  </p>

  <div class="back-link-section">
    <%= link_to "< Back", spaces_path, {class: "back-link"} %>
  </div>

</div>

